<UserControl x:Class="DBConnectionLayerFrontEnd.View.InvoiceItemListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DBConnectionLayerFrontEnd.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="/Resource/FrontEndResourceDictionary.xaml"/>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" Background="White">
        <ContentControl Content="{Binding Path=InvoiceList }" ContentTemplate="{StaticResource InvoiceItemListGridTemplate}" />

    </ScrollViewer>

</UserControl>
